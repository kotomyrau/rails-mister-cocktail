<% if @cocktail.doses.empty? %>
  <h1><%= "What is in your #{@cocktail.name}?" %></h1>
<% else %>
  <h1><%="What's else is in your #{@cocktail.name}?"%></h1>
<% end %>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.association :ingredient, collection: Ingredient.order(:name), prompt: "Choose an ingredient" %>
  <%= f.input :description, label: "Ingredient measurement" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

